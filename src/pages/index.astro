					</g>
				</g>
			</g>
		</g>
	</svg>
	<section class="container mx-auto text-center py-6 mb-12">
		<h2 class="w-full my-2 text-5xl font-bold leading-tight text-center text-white">Koop nu uw tickets</h2>
		<div class="w-full mb-4">
			<div class="h-1 mx-auto bg-white w-1/6 opacity-25 my-0 py-0 rounded-t"></div>
		</div>
		<h3 class="my-4 text-3xl leading-tight">Voor een avond vol belevenissen en muziek</h3>
		<CallToAction />
	</section>

	<script>
		var scrollpos = window.scrollY;
		var header = document.getElementById('header');
		var logo = document.getElementById('logo');
		var logowit = document.getElementById('logo-wit');
		var toToggle = document.querySelectorAll('.toggleColour');

		document.addEventListener('scroll', function () {
			/*Apply classes for slide in bar*/
			scrollpos = window.scrollY;
			if (scrollpos > 10) {
				logowit.classList.add('hidden');
				logo.classList.remove('hidden');
				header.classList.add('bg-gray-100');
				//Use to switch toggleColour colours
				for (var i = 0; i < toToggle.length; i++) {
					toToggle[i].classList.add('text-gray-800');
					toToggle[i].classList.remove('text-white');
				}
				header.classList.add('shadow');
			} else {
				logo.classList.add('hidden');
				logowit.classList.remove('hidden');
				header.classList.remove('bg-gray-100');
				//Use to switch toggleColour colours
				for (var i = 0; i < toToggle.length; i++) {
					toToggle[i].classList.add('text-white');
					toToggle[i].classList.remove('text-gray-800');
				}

				header.classList.remove('shadow');
			}
		});
	</script>
</Layout>
