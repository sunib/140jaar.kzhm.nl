---
import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';
---

<section>
								<!-- Let op dit gaat nog niet goed met formaat! -->
	<div class="bg-fixed bg-right-top bg-[url('~/assets/images/zand-lotr-promo.jpg')]">
		<div class="py-12 md:py-20">
			<div class="m-50">
				<h1 class="text-5xl font-bold font-heading text-center text-white">140 jaar concert!</h1>
			</div>
		</div>
	</div>
</section>

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="text-center pb-10 md:pb-16">
				<h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
					Spannend zand met 
					<span class="bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500">Lord of the rings</span>
				</h1>
				<div class="max-w-3xl mx-auto">
					<p class="text-xl text-gray-600 mb-8 dark:text-slate-400">
						Zand show met live muziek en inspirerende verteller<span class="inline sm:hidden">...</span><span
							class="hidden sm:inline"
							>Dark Mode, Great Page Speed, image optimization, sitemap generation and more.</span
						>
					</p>
					<div class="max-w-none px-6 flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
						<div class="flex w-full sm:w-auto">
							<a
								class="btn text-white border border-primary-600 bg-primary-600 hover:bg-primary-800 hover:border-primary-800 sm:mb-0 w-full"
								href="https://www.ntk.nl/bestel/figi%2Fvoorstelling%2Fjubileumconcert-The-lord-of-the-rings/2022-11-19/19h30/212350454812?fc=theater"
								target="_blank"
								rel="noopener"
							>
								<Icon name="tabler:ticket" class="w-5 h-5 mr-1 -ml-1.5" /> Koop tickets
							</a>
						</div>
						<div class="flex w-full sm:w-auto">
							<a
								class="btn text-white bg-gray-900 hover:bg-gray-700 dark:bg-gray-700 dark:hover:bg-gray-800 w-full"
								href="#features">Meer informatie</a
							>
						</div>
					</div>
				</div>
			</div>

			<div class="relative mb-8 m-auto max-w-3xl">
				<Picture
					src={import('~/assets/images/zand-lotr-promo.jpg')}
					class="mx-auto rounded-md shadow-lg bg-gray-400 dark:bg-slate-700 w-full"
					widths={[400, 768]}
					sizes=" (max-width: 767px) 400px, 768px"
					alt="Hero Image"
					aspectRatio="16:9"
				/>
			</div>

		</div>
	</div>
</section>
